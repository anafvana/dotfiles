function gcdate(){
	if [ $# -eq 0 ]
	then
		echo "Expecting date format: $(date +"%a %b %-d %T %Y")"
		echo -n "Date: "
		read -r date
	else
		date=$@
	fi

	GIT_COMMITTER_DATE="$date" git commit --amend --no-edit --date "$date +0100"
}

