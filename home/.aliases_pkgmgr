#!/bin/bash

function dnfrepo(){
	sudo config-manager --add-repo "$*"
}

function dnfr(){
	sudo dnf remove "$*"; sudo dnf autoremove -y
}

alias dnfs='dnf search'
alias dnfi='sudo dnf install'
alias dnfup='sudo dnf upgrade -y; sudo dnf autoremove'
alias dnfl='dnf list --installed'
alias dnfhelp='xdg;open https://dnf.readthedocs.io/en/latest/command_ref.html'
alias pkgmgr='echo "dnf"'
